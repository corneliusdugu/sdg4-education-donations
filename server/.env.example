# Server configuration
PORT=8080

# MongoDB Atlas connection string (NO localhost)
# Replace placeholders with your real Atlas details locally (never commit secrets)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/<dbname>?retryWrites=true&w=majority&appName=<appName>

# Optional test DB (Atlas too)
MONGO_URI_TEST=mongodb+srv://<username>:<password>@<cluster-host>/<test-dbname>?retryWrites=true&w=majority&appName=<appName>

# JWT secret for signing tokens (use a long random string)
JWT_SECRET=replace_with_a_long_random_secret

# Optional: allow Codio frontend origin during development (not needed in production single-URL mode)
CODIO_CLIENT_ORIGIN=
